{{!
    @template theme_dash/blocks/hero

    Hero block snippet for the front page.

    Example context (json):
    {
        "title": "Welcome to Our Platform",
        "subtitle": "Start learning today",
        "primarybuttontext": "Get Started",
        "primarybuttonurl": "/login/signup.php",
        "secondarybuttontext": "Browse Courses",
        "secondarybuttonurl": "/course",
        "backgroundimage": "url/to/image.jpg"
    }
}}
<section class="dash-block dash-hero" {{#backgroundimage}}style="background-image: url('{{{ backgroundimage }}}')"{{/backgroundimage}}>
    <div class="dash-hero-content">
        <div class="dash-hero-text">
            {{#title}}
            <h1>{{{ title }}}</h1>
            {{/title}}
            {{#subtitle}}
            <p>{{{ subtitle }}}</p>
            {{/subtitle}}
            <div class="dash-hero-actions">
                {{#primarybuttontext}}
                <a href="{{{ primarybuttonurl }}}" class="btn-dash-primary btn-dash-lg">
                    {{{ primarybuttontext }}}
                </a>
                {{/primarybuttontext}}
                {{#secondarybuttontext}}
                <a href="{{{ secondarybuttonurl }}}" class="btn-dash-outline btn-dash-lg" style="border-color: #fff; color: #fff;">
                    {{{ secondarybuttontext }}}
                </a>
                {{/secondarybuttontext}}
            </div>
        </div>
        {{#heroimage}}
        <div class="dash-hero-image">
            <img src="{{{ heroimage }}}" alt="" loading="lazy">
        </div>
        {{/heroimage}}
    </div>
</section>

