{{!
    @template theme_dash/blocks/faq

    FAQ accordion block snippet for the front page.

    Example context (json):
    {
        "title": "Frequently Asked Questions",
        "subtitle": "Find answers to common questions",
        "faqs": [
            {
                "question": "How do I get started?",
                "answer": "Simply create an account and browse our courses."
            }
        ]
    }
}}
<section class="dash-block dash-faq">
    <div class="dash-block-inner">
        <div class="dash-block-header">
            {{#title}}
            <h2 class="dash-block-title">{{{ title }}}</h2>
            {{/title}}
            {{#subtitle}}
            <p class="dash-block-subtitle">{{{ subtitle }}}</p>
            {{/subtitle}}
        </div>

        <div class="dash-faq-list">
            {{#faqs}}
            <div class="dash-faq-item">
                <button class="dash-faq-question" 
                        type="button"
                        aria-expanded="false"
                        aria-controls="faq-answer-{{index}}">
                    <span>{{{ question }}}</span>
                    <span class="dash-faq-icon">
                        <i class="fa fa-chevron-down" aria-hidden="true"></i>
                    </span>
                </button>
                <div class="dash-faq-answer" id="faq-answer-{{index}}">
                    <p>{{{ answer }}}</p>
                </div>
            </div>
            {{/faqs}}
        </div>
    </div>
</section>

