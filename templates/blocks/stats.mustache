{{!
    @template theme_dash/blocks/stats

    Statistics block snippet for the front page.

    Example context (json):
    {
        "title": "Our Impact",
        "stats": [
            {"number": "5000+", "count": 5000, "label": "Students"},
            {"number": "100+", "count": 100, "label": "Courses"},
            {"number": "50+", "count": 50, "label": "Instructors"},
            {"number": "95%", "count": 95, "label": "Satisfaction"}
        ]
    }
}}
<section class="dash-block dash-stats">
    <div class="dash-block-inner">
        {{#title}}
        <div class="dash-block-header">
            <h2 class="dash-block-title">{{{ title }}}</h2>
        </div>
        {{/title}}

        <div class="dash-stats-grid">
            {{#stats}}
            <div class="dash-stat-item" data-reveal>
                <div class="dash-stat-number" data-count="{{{ count }}}">{{{ number }}}</div>
                <div class="dash-stat-label">{{{ label }}}</div>
            </div>
            {{/stats}}
        </div>
    </div>
</section>

