{{!
    @template theme_dash/blocks/features

    Features grid block snippet for the front page.

    Example context (json):
    {
        "title": "Why Choose Us?",
        "subtitle": "Discover our unique features",
        "features": [
            {
                "icon": "graduation-cap",
                "title": "Expert Instructors",
                "description": "Learn from industry professionals"
            }
        ]
    }
}}
<section class="dash-block dash-features">
    <div class="dash-block-inner">
        <div class="dash-block-header">
            {{#title}}
            <h2 class="dash-block-title">{{{ title }}}</h2>
            {{/title}}
            {{#subtitle}}
            <p class="dash-block-subtitle">{{{ subtitle }}}</p>
            {{/subtitle}}
        </div>

        <div class="dash-features-grid">
            {{#features}}
            <div class="dash-feature-card" data-reveal data-reveal-delay="{{delay}}">
                <div class="dash-feature-icon">
                    <i class="fa fa-{{{ icon }}}" aria-hidden="true"></i>
                </div>
                <h3>{{{ title }}}</h3>
                <p>{{{ description }}}</p>
            </div>
            {{/features}}
        </div>
    </div>
</section>

