{{!
    @template theme_dash/blocks/testimonials

    Testimonials block snippet for the front page.

    Example context (json):
    {
        "title": "What Our Students Say",
        "subtitle": "Hear from our community",
        "testimonials": [
            {
                "content": "Amazing platform with great courses!",
                "authorname": "John Doe",
                "authorrole": "Student",
                "authorimage": "url/to/image.jpg"
            }
        ]
    }
}}
<section class="dash-block dash-testimonials">
    <div class="dash-block-inner">
        <div class="dash-block-header">
            {{#title}}
            <h2 class="dash-block-title">{{{ title }}}</h2>
            {{/title}}
            {{#subtitle}}
            <p class="dash-block-subtitle">{{{ subtitle }}}</p>
            {{/subtitle}}
        </div>

        <div class="dash-testimonials-grid">
            {{#testimonials}}
            <div class="dash-testimonial-card" data-reveal>
                <div class="dash-testimonial-content">
                    {{{ content }}}
                </div>
                <div class="dash-testimonial-author">
                    {{#authorimage}}
                    <img src="{{{ authorimage }}}" alt="{{{ authorname }}}" loading="lazy">
                    {{/authorimage}}
                    {{^authorimage}}
                    <div class="dash-testimonial-avatar" style="width: 50px; height: 50px; border-radius: 50%; background: var(--dash-primary-light); display: flex; align-items: center; justify-content: center; color: var(--dash-primary); font-weight: 600;">
                        {{authorinitial}}
                    </div>
                    {{/authorimage}}
                    <div>
                        <div class="dash-testimonial-name">{{{ authorname }}}</div>
                        {{#authorrole}}
                        <div class="dash-testimonial-role">{{{ authorrole }}}</div>
                        {{/authorrole}}
                    </div>
                </div>
            </div>
            {{/testimonials}}
        </div>
    </div>
</section>

