{{!
    @template theme_dash/secure

    Secure layout for quiz attempts etc in the Dash theme.
}}
{{{ output.doctype }}}
<html {{{ output.htmlattributes }}}>
<head>
    <title>{{{ output.page_title }}}</title>
    <link rel="shortcut icon" href="{{{ output.favicon }}}" />
    {{{ output.standard_head_html }}}
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>

<body {{{ bodyattributes }}}>
{{{ output.standard_top_of_body_html }}}

<div id="page-wrapper" class="d-print-block">
    <div id="page" class="drawers">
        <div class="secure-layout-header p-3 bg-surface border-bottom">
            <div class="container-fluid">
                <div class="d-flex justify-content-between align-items-center">
                    <div class="secure-logo">
                        {{#logourl}}
                        <img src="{{{ logourl }}}" alt="{{{ sitename }}}" style="max-height: 40px;">
                        {{/logourl}}
                        {{^logourl}}
                        <span class="h5 mb-0">{{{ sitename }}}</span>
                        {{/logourl}}
                    </div>
                    <div class="secure-user">
                        {{{ output.user_menu }}}
                    </div>
                </div>
            </div>
        </div>

        <div id="topofscroll" class="main-inner">
            <div id="page-content" class="pb-3 d-print-block">
                <div id="region-main-box">
                    <section id="region-main" class="region-main-content" aria-label="{{#str}}content{{/str}}">
                        {{{ output.course_content_header }}}
                        {{{ output.main_content }}}
                        {{{ output.course_content_footer }}}
                    </section>
                </div>
            </div>
        </div>
    </div>
</div>

{{{ output.standard_end_of_body_html }}}

</body>
</html>
{{#js}}
require(['theme_dash/darkmode'], function(DarkMode) {
    DarkMode.init();
});
{{/js}}

